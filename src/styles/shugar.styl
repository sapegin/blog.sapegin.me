box-shadow()
	-webkit-box-shadow arguments  // Saf3-4, iOS 4.0.2 - 4.2, Android 2.3+
	box-shadow arguments  // Opera 10.5, IE9, FF4+, Chrome 6+, iOS 5

transition()
	-webkit-transition arguments  // Saf3.2+, Chrome
